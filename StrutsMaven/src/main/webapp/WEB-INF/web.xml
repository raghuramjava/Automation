<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
  <welcome-file>index.html</welcome-file>
  </welcome-file-list>
   <filter>
  <filter-name>struts2</filter-name>
  <filter-class>Connection.Dispatcher</filter-class>
  </filter>
  <filter-mapping>
  <filter-name>struts2</filter-name>
  <url-pattern>/*</url-pattern>
  </filter-mapping>
  
   <context-param>
   <param-name>
      org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG
   </param-name>
   <param-value>
      /WEB-INF/tiles.xml
   </param-value>
   </context-param>
   
  <listener>  
  <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>  
  </listener> 
  
  <servlet>
  <servlet-name>reservationChart</servlet-name> 
  <servlet-class>general.ResChartServlet</servlet-class> 
  </servlet>
 <servlet-mapping>
  <servlet-name>reservationChart</servlet-name> 
  <url-pattern>/reservationChartAction</url-pattern> 
  </servlet-mapping>
  

   
</web-app>
